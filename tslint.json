{
  "compilerOptions": {
    "lib": ["es2017"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "inlineSources": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    ".vscode/**/*"
  ]
}